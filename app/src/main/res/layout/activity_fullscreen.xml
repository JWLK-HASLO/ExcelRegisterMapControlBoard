<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDark"
    tools:context=".FullscreenActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- LEFT -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="NestedWeights"
            android:layout_marginTop="20dp">

            <!--MODE CHANNEL-->
            <LinearLayout
                android:id="@+id/left_layout_mode"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MODE"
                        android:background="@color/colorVioletB"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="10dp"/>

                    <RadioGroup
                        android:id="@+id/mode_group"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RadioButton
                            android:id="@+id/mode_b"
                            android:text="B-mode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:textColor="@color/colorWhite"
                            android:buttonTint="@color/colorWhite"/>

                        <RadioButton
                            android:id="@+id/mode_d"
                            android:text="D-mode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:buttonTint="@color/colorWhite" />

                        <RadioButton
                            android:id="@+id/mode_c"
                            android:text="C-mode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:buttonTint="@color/colorWhite" />
                    </RadioGroup>


                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Channel"
                        android:background="@color/colorVioletB"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="10dp"/>

                    <RadioGroup
                        android:id="@+id/channel_group"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RadioButton
                            android:id="@+id/channel_1"
                            android:text="B-mode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:textColor="@color/colorWhite"
                            android:buttonTint="@color/colorWhite"/>

                        <RadioButton
                            android:id="@+id/channel_2"
                            android:text="D-mode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:buttonTint="@color/colorWhite" />

                    </RadioGroup>
                </LinearLayout>


            </LinearLayout>

            <!--VIEW DEPTH-->
            <LinearLayout
                android:id="@+id/left_layout_depth"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Depth"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/input_viewdepth"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:textSize="10sp"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorStroke"
                        android:hint="0 ~ 10"
                        android:inputType="numberDecimal"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="cm"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="center"
                        android:textSize="10sp"/>

                </LinearLayout>



            </LinearLayout>

            <!--TX PARAMETER-->
            <LinearLayout
                android:id="@+id/left_layout_txparameter"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tx Parameter Setting"
                    android:background="@color/colorVioletB"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="10dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="PRF"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="center"
                        android:textSize="10sp"/>

                    <EditText
                        android:id="@+id/input_prf"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:textSize="10sp"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorStroke"
                        android:hint="0 ~ 10"
                        android:inputType="numberDecimal"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="MHz"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="center"
                        android:textSize="10sp"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="Center Frequency"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="center"
                        android:textSize="10sp"/>

                    <EditText
                        android:id="@+id/input_center_frequency"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:textSize="10sp"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorStroke"
                        android:hint="0 ~ 10"
                        android:inputType="numberDecimal"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="MHz"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="center"
                        android:textSize="10sp"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="Pulse Cycle "
                        android:textColor="@color/colorWhite"
                        android:textAlignment="center"
                        android:textSize="10sp"/>

                    <EditText
                        android:id="@+id/input_pulse_cycle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:textSize="10sp"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorStroke"
                        android:hint="0 ~ 10"
                        android:inputType="numberDecimal"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="times"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="center"
                        android:textSize="10sp"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="Focusing Point"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="center"
                        android:textSize="10sp"/>

                    <EditText
                        android:id="@+id/input_focusing_point"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:textSize="10sp"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorStroke"
                        android:hint="0 ~ 10"
                        android:inputType="numberDecimal"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="cm"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="center"
                        android:textSize="10sp"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="Dynamic Range"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="center"
                        android:textSize="10sp"/>

                    <EditText
                        android:id="@+id/input_dynamic_range"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:textSize="10sp"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorStroke"
                        android:hint="0 ~ 10"
                        android:inputType="numberDecimal"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="db"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="center"
                        android:textSize="10sp"/>

                </LinearLayout>


            </LinearLayout>

            <!--TX Voltage-->
            <LinearLayout
                android:id="@+id/left_layout_txvoltage"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tx Voltage"
                    android:background="@color/colorVioletB"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="10dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/input_tx_voltage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:textSize="12sp"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorStroke"
                        android:hint="0 ~ 30"
                        android:inputType="numberDecimal"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="V"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="center"
                        android:textSize="10sp"/>

                </LinearLayout>

            </LinearLayout>

            <!--Blank-->
            <LinearLayout
                android:id="@+id/left_layout_blank"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:padding="5dp"/>


        </LinearLayout>


        <!-- Center -->
        <LinearLayout
            android:id="@+id/fullscreen_content"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginTop="18dp">

            <!-- Image Wrapper -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="@color/colorSubDark">

                <ImageView
                    android:id="@+id/data_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:keepScreenOn="true" />


            </LinearLayout>

            <!-- Log Box Wrapper -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">



                <!-- Log Box Control View -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <TextView
                        android:id="@+id/log_box_text"
                        android:scrollbars = "vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:keepScreenOn="true"
                        android:text="Log Box"
                        android:textColor="@color/colorStroke"
                        android:textSize="9sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <!-- Log Box Control Button-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/side_button_clear"
                        style="?metaButtonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/colorWhite"
                        android:layout_weight="1"
                        android:text="CLEAR" />

                    <Button
                        android:id="@+id/side_button_top"
                        style="?metaButtonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/colorWhite"
                        android:text="TOP" />

                    <Button
                        android:id="@+id/side_button_bottom"
                        style="?metaButtonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="BTM"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


        <!-- RIGHT -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="NestedWeights"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp">

                <Button
                    android:id="@+id/button_scan_imaging"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorVioletR"
                    android:text="SCANNING START"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp"
                    android:enabled="true"/>

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingHorizontal="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TIMER : "
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/timer_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00:00:00:0"
                    android:textColor="@color/colorVioletHL"
                    android:textSize="18sp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp">

                <Button
                    android:id="@+id/button_timer_control"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:text="START"
                    android:textColor="@color/colorWhiteDark"
                    android:textSize="14sp"
                    android:enabled="false"/>

                <Button
                    android:id="@+id/button_timer_clear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:text="CLEAR"
                    android:textColor="@color/colorWhiteDark"
                    android:textSize="14sp"
                    android:enabled="false"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp">

                <Button
                    android:id="@+id/button_wide_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:text="NOW : Original View"
                    android:textColor="@color/colorWhiteDark"
                    android:textSize="14dp"
                    android:enabled="false"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_side"
            android:orientation="vertical"
            style="?metaButtonBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:gravity="left"
            android:background="@color/colorDarkTP"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="100dp"
            tools:ignore="UselessParent">

            <LinearLayout
                android:orientation="horizontal"
                style="?metaButtonBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="40dp">

                <Button
                    android:id="@+id/setData_led"
                    style="?metaButtonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="LED"
                    android:textColor="@color/colorVioletHL" />

                <Button
                    android:id="@+id/load_frame_data"
                    style="?metaButtonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="FR"
                    android:textColor="@color/colorVioletHL" />

                <Button
                    android:id="@+id/set_test_start"
                    style="?metaButtonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="T_START"
                    android:textColor="@color/colorVioletHL" />

                <Button
                    android:id="@+id/set_test_reset"
                    style="?metaButtonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="T_RESET"
                    android:textColor="@color/colorVioletHL" />
                <Button
                    android:id="@+id/screenSizeView"
                    style="?metaButtonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/colorVioletHL" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                style="?metaButtonBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="40dp">


                <Button
                    android:id="@+id/load_register_1"
                    style="?metaButtonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="L1"
                    android:textColor="@color/colorVioletHL" />

                <Button
                    android:id="@+id/load_register_2"
                    style="?metaButtonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="L2"
                    android:textColor="@color/colorVioletHL" />

                <Button
                    android:id="@+id/load_register_3"
                    style="?metaButtonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="L3"
                    android:textColor="@color/colorVioletHL" />

                <Button
                    android:id="@+id/load_register_4"
                    style="?metaButtonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="L4"
                    android:textColor="@color/colorVioletHL" />


                <Button
                    android:id="@+id/start_register"
                    style="?metaButtonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="START"
                    android:textColor="@color/colorVioletHL" />

                <Button
                    android:id="@+id/stop_register"
                    style="?metaButtonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="STOP"
                    android:textColor="@color/colorVioletHL" />


            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            android:orientation="horizontal"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/colorPrimaryDark"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/hide_button_register_map"
                style="?metaButtonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="Register MAP"
                android:textColor="@color/colorWhite"/>

            <Button
                android:id="@+id/dummy_button"
                style="?metaButtonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HIDE"
                android:textColor="@color/colorWhite" />

        </LinearLayout>
    </FrameLayout>

</FrameLayout>